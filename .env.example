# Database
# PostgreSQL接続文字列
# 形式: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:password@localhost:5432/sales_daily_report?schema=public"

# JWT Settings
# JWT署名用のシークレットキー（本番環境では必ず変更すること）
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
# アクセストークンの有効期限（秒）
JWT_EXPIRES_IN="3600"
# リフレッシュトークンの有効期限（秒）
JWT_REFRESH_EXPIRES_IN="2592000"

# Application Settings
# アプリケーションの実行環境（development, test, staging, production）
NODE_ENV="development"
# アプリケーションのポート番号
PORT="3000"

# CORS Settings
# 許可するオリジン（カンマ区切りで複数指定可能）
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Logging
# ログレベル（debug, info, warn, error）
LOG_LEVEL="info"

# Password Hashing
# bcryptのソルトラウンド（推奨: 10以上）
BCRYPT_SALT_ROUNDS="10"
